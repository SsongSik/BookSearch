<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:padding="8dp">

    <ImageView
        android:id="@+id/search_result_iv"
        android:layout_width="60dp"
        android:layout_height="87dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/search_result_star_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="-10dp"
        android:layout_marginBottom="-10dp"
        android:src="@drawable/baseline_star_24"
        app:layout_constraintBottom_toBottomOf="@id/search_result_iv"
        app:layout_constraintEnd_toEndOf="@+id/search_result_iv" />

    <TextView
        android:id="@+id/search_result_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:maxLines="2"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_result_iv"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="제목" />

    <TextView
        android:id="@+id/search_result_writer_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_result_iv"
        app:layout_constraintTop_toBottomOf="@id/search_result_tv"
        tools:text="저자" />

    <TextView
        android:id="@+id/search_result_company_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_result_iv"
        app:layout_constraintTop_toBottomOf="@id/search_result_writer_tv"
        tools:text="출판사" />

    <TextView
        android:id="@+id/search_result_price_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/search_result_iv"
        app:layout_constraintTop_toBottomOf="@id/search_result_company_tv"
        tools:text="20000" />

</androidx.constraintlayout.widget.ConstraintLayout>